%{
int word_count = 0;
int char_count = 0;
int line_count = 0;
%}

%%
\n          { line_count++; char_count++; }   
[ \t]+      { char_count += yyleng; }       
\w+         { word_count++; char_count += yyleng; }  
.           { char_count++; }                

%%
int main() {
    yylex();
    printf("Lines: %d\n", line_count);
    printf("Words: %d\n", word_count);
    printf("Characters: %d\n", char_count);
    return 0;
}

int yywrap() {
    return 1;
}
